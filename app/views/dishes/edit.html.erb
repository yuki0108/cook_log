<% provide(:title, "料理情報の編集") %>
<div id="fh5co-portfolio">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@dish) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <span class="picture">
            <%= f.label :picture %>　<span class="input-unneed">※任意</span>
            <%= f.file_field :picture, accept: 'image/jpeg,image/png', class: 'form-control', id: 'dish_picture' %>
            <%= image_tag(@dish.picture.thumb200.url) if @dish.picture.url.present? %>
            <p></p>
          </span>
          <p></p>
          <div class = 'form-group'>
            <%= f.label :name %>　<span class="input-need">※必須</span>
            <%= f.text_field :name, class: 'form-control', id: 'dish_name' %>
          </div>
          <div class = 'form-group'>
            <%= f.label :description %>　<span class="input-unneed">※任意</span>
            <%= f.text_field :description, size: "60x4", class: 'form-control', id: 'dish_description' %>
          </div>
          <div class = 'form-group'>
            <%= f.label :portion %> [人分]　<span class="input-unneed">※任意</span>
            <%= f.text_field :portion, class: 'form-control', id: 'dish_portion' %>
          </div>
          <div class="row">
            <div class="col-md-9">
              <p class="title-ingredient-name">材料（10種類まで登録可）　<span class="input-unneed">※任意</span></p>
            </div>
            <div class="col-md-3">
              <p class="title-ingredient-quantity">量　<span class="input-unneed">※任意</span></p>
            </div>
          </div>
          <%= f.fields_for :ingredients do |i| %>
            <div class="row">
              <div class="col-md-9">
                <div class = 'form-group'>
                  <%= i.text_field :name, class: 'form-control ingredient_name' %>
                </div>
              </div>
              <div class="col-md-3">
                <div class = 'form-group'>
                  <%= i.text_field :quantity, class: 'form-control ingredient_quantity' %>
                </div>
              </div>
            </div>
          <% end %>
          <div class = 'form-group'>
            <%= f.label :tips %>　<span class="input-unneed">※任意</span>
            <%= f.text_field :tips, size: "30x4", class: 'form-control', id: 'dish_tips' %>
          </div>
          <div class = 'form-group'>
            <%= f.label :reference %>　<span class="input-unneed">※任意</span>
            <%= f.text_field :reference, class: 'form-control', id: 'dish_reference' %>
          </div>
          <div class = 'form-group'>
            <%= f.label :required_time %> [分]　<span class="input-unneed">※任意</span>
            <%= f.text_field :required_time, class: 'form-control', id: 'dish_required_time' %>
          </div>
          <div class = 'form-group'>
            <%= f.label :popularity %> [1~5]　<span class="input-unneed">※任意</span>
            <%= f.text_field :popularity, class: 'form-control', id: 'dish_popularity' %>
          </div>
          <%= f.submit "更新する", class: "btn btn-primary" %>
          <p></p>
          <%= link_to "料理を削除する", dish_path(@dish), method: :delete,
                                      data: { confirm: "本当にこの料理を削除してよろしいですか？" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>